                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pgyl.mind_a.ScoreActivity"
            android:label="ScoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.pgyl.pekislib_a.InputButtonsActivity"
            android:label="InputButtonsActivity" />
        <activity
            android:name="com.example.pgyl.pekislib_a.ColorPickerActivity"
            android:label="ColorPickerActivity" />
        <activity
            android:name="com.example.pgyl.pekislib_a.PresetsActivity"
            android:label="PresetsActivity" />
        <activity
            android:name="com.example.pgyl.pekislib_a.HelpActivity"
            android:label="HelpActivity" />
    </application>
</manifest>
