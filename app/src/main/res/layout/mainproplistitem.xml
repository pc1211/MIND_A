<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal">

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_ITEM_COMB_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_ITEM_COMB_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_ITEM_COMB_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_ITEM_COMB_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_ITEM_COMB_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_ITEM_COMB_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_ITEM_COMB_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_ITEM_COMB_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.example.pgyl.pekislib_a.SymbolButtonView
            android:id="@+id/BTN_ITEM_COMB_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.pgyl.pekislib_a.DotMatrixDisplayView
            android:id="@+id/BTN_ITEM_DOT_MATRIX_SCORE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>